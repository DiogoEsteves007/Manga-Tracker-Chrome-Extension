{
  "manifest_version": 3,
  "name": "Manhwa Tracker",
  "version": "1.0",
  "description": "Guardar mangas no Google Sheets via OAuth",
  "icons": {
    "16": "./icons/icon_16x16.jpg",
    "48": "./icons/icon_48x48.jpg",
    "128": "./icons/icon_128x128.jpg"
  },
  "permissions": ["identity", "tabs", "storage"],
  "oauth2": {
    "client_id": "CLIENT_ID.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["*://*/*"],
    "js": ["content-script.js"],
    "run_at": "document_idle"
  }
]
}
